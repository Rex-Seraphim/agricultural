<view class="register-container">
<view class="content">
<view class="avatar-box">
<image class="avatar" src="http://codegen.caihongy.cn/20201114/7856ba26477849ea828f481fa2773a95.jpg" mode="aspectFit" />
</view>
<view class="box">
<input type="text" placeholder="账号" model:value="{{account}}"  />
</view>
<view class="box">
    <input type="password" placeholder="请输入密码"     model:value="{{password}}" />
</view>
<view class="box">
<input type="password" placeholder="请确认密码"     model:value="{{password2}}"/>
</view>
    <view class="box">
        <input type="text" placeholder="名称" model:value="{{name}}" />
    </view>
    <view class="box">
        <input type="text" placeholder="联系电话" model:value="{{contactPhone}}" />
    </view>
    <view class="box">
        <input type="text" placeholder="地址" model:value="{{address}}" />
    </view>
    <button class="register-btn" bindtap="register">注册</button>

</view>
</view>